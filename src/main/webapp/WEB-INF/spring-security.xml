		<intercept-url pattern="/mahasiswa**" access="hasRole('ROLE_STAFF')" />
	</http>

	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="fikkywirita" password="1234" authorities="ROLE_ADMIN" />
				<user name="operator" password="operator" authorities="ROLE_STAFF" />
				<user name="staff" password="staff" authorities="ROLE_STAFF" />
			</user-service>
		</authentication-provider>
	</authentication-manager>
</beans:beans>